<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.orderkuy">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name=".AppController"
        android:icon="@drawable/logo_eatdict"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Checkout"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Login"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.Register"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".fragment.HomeFragment"
            android:theme="@style/AppTheme2" />
        <activity android:name=".fragment.OrderFragment" />
        <activity
            android:name=".fragment.AboutFragment"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".fragment.AccountFragment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CartActivity"
            android:label="Cart" />
        <activity
            android:name=".activity.DetailProduct"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Order"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Detail_order"
            android:theme="@style/AppTheme2" />
        <activity android:name=".SimpleScannerActivity" />
    </application>

</manifest>